<!doctype html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Bootstrap demo</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
  <link rel="stylesheet" href="/stylesheets/profile.css">
  <link href="https://cdn.jsdelivr.net/npm/remixicon@4.3.0/fonts/remixicon.css" rel="stylesheet" />
</head>

<body>

  <div class="containerPancode">
    <div class="cardPancode">
      <form id="uploadForm" hidden action="/fileupload" method="post" enctype="multipart/form-data">
        <input type="file" name="image">
      </form>
      <div class="profileEdit">
        <div class="profile-picture">
          <img
            src="/images/profilePics/<%= user.dp %>"
            alt="Profile Picture">
        </div>
        <span id="uploadIcon" class="profileEditSpan">
          <i class="ri-pencil-fill"></i>
        </span>
      </div>
      <h2 class="name">
        <%= user.fullname %>
      </h2>
      <h3 class="username">@<%= user.username %>
      </h3>
      <p class="tagline">Lorem ipsum dolor sit amet consectetur adipisicing.</p>
      <p class="description">Lorem ipsum dolor sit amet consectetur adipisicing elit. Magni?</p>
      <a href="/logout" class="button">Logout</a>
      <form action="/upload" method="post" enctype="multipart/form-data">
        <input type="text" name="filecaption" placeholder="Some Caption" />
        <input type="file" name="file" />
        <input type="submit" />
      </form>
    </div>
  </div>

  <div class="container">
    <div class="cards flex">
      <% user.posts.forEach(function(post){ %>
        <div class="card" style="width: 18rem;">
          <!-- // Images from unsplash  -->
          <img src="/images/uploads/<%= post.image %>" class="card-img-top" alt="...">
          <!-- need path ahead of post.image -->
          <div class="card-body">
            <h5 class="card-title">
              <%= post.imageText %> <!-- post.imageText use -->
            </h5>
          </div>
        </div>
        <% }) %>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
    crossorigin="anonymous"></script>

  <script>
    document.querySelector("#uploadIcon").addEventListener("click", function () {
      document.querySelector("#uploadForm input").click()
    })

    document.querySelector("#uploadForm input").addEventListener("change", function(){
      document.querySelector("#uploadForm").submit()
    })
  </script>
</body>

</html>